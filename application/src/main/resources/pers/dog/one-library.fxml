<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.textfield.CustomTextField?>
<?import pers.dog.infra.action.ActionGroup?>
<?import pers.dog.infra.action.application.ExitAction?>
<?import pers.dog.infra.control.ActionMenuBar?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pers.dog.controller.OneLibraryController">
    <top>
        <ActionMenuBar maxWidth="Infinity">
            <ActionGroup text="%info.action.file">
                <ExitAction fx:factory="getInstance"/>
            </ActionGroup>
        </ActionMenuBar>
    </top>
    <center>
        <SplitPane dividerPositions="0.2">
            <VBox minWidth="160" maxWidth="480">
                <HBox alignment="CENTER">
                    <CustomTextField fx:id="projectSearch" focusTraversable="false" promptText="%info.project.search"
                                     prefWidth="6400"/>
                    <Button fx:id="projectExpand" focusTraversable="false"
                            maxHeight="24" maxWidth="24" minHeight="24" minWidth="24">
                        <tooltip>
                            <Tooltip text="%info.project.expand"/>
                        </tooltip>
                        <HBox.margin>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </HBox.margin>
                        <padding>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </padding>
                    </Button>
                    <Button fx:id="projectCollapse" focusTraversable="false"
                            maxHeight="24" maxWidth="24" minHeight="24" minWidth="24">
                        <tooltip>
                            <Tooltip text="%info.project.collapse"/>
                        </tooltip>
                        <HBox.margin>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </HBox.margin>
                        <padding>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </padding>
                    </Button>
                    <Separator orientation="VERTICAL"/>
                </HBox>
                <HBox fx:id="projectWorkspace">

                </HBox>
            </VBox>
            <VBox/>
        </SplitPane>
    </center>
</BorderPane>
